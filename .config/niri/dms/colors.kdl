layout {
    background-color "transparent"

    focus-ring {
        active-color   "#a5c8ff"
        inactive-color "#8d9199"
        urgent-color   "#ffb4ab"
    }

    border {
        active-color   "#a5c8ff"
        inactive-color "#8d9199"
        urgent-color   "#ffb4ab"
    }

    shadow {
        color "#00000070"
    }

    tab-indicator {
        active-color   "#a5c8ff"
        inactive-color "#8d9199"
        urgent-color   "#ffb4ab"
    }

    insert-hint {
        color "#a5c8ff80"
    }
}