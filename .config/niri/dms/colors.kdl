layout {
    background-color "transparent"

    focus-ring {
        active-color   "#b5c4ff"
        inactive-color "#8f909a"
        urgent-color   "#ffb4ab"
    }

    border {
        active-color   "#b5c4ff"
        inactive-color "#8f909a"
        urgent-color   "#ffb4ab"
    }

    shadow {
        color "#00000070"
    }

    tab-indicator {
        active-color   "#b5c4ff"
        inactive-color "#8f909a"
        urgent-color   "#ffb4ab"
    }

    insert-hint {
        color "#b5c4ff80"
    }
}

/-recent-windows {
    highlight {
        active-color   "#344479"
        urgent-color   "#ffb4ab"
    }
}